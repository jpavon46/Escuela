@using Escuela.ViewModels;
@model CourseViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<body>
    <h1>Cursos Registrados</h1>
    <br>
    <form method="get" asp-action="Index">
        <label for="filter">Filtra por descripción:</label>
        <input asp-for="filter" type="text">
        <button type="submit">Buscar</button>
    </form>
    <br>
    <form method="get" asp-action="DeleteAllStudentCourses">
        <button type="submit">Borrar todos los cursos del alumno</button>
    </form>

    <br>

    <p>
        <a asp-action="Create" class="btn btn-primary btn-sm">Agrega un nuevo curso</a>
    </p>

    <table>
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Profesor</th>
                <th>Alumno</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Courses)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Teacher.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Student.Name)</td>
                    <td>
                       <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas dar de baja este curso?')">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
